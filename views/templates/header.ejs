</head>

<body class="text-center m-4">
    <nav class="navbar navbar-expand-lg ftco_navbar ftco-navbar-light mb-4 py-3 border-bottom">
        <div class="container ">
            <a class="navbar-brand" href="index.html">WEB DEV</a>
            <% if(locals.isNavBarShowed) { %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" 
                aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav m-auto nav-pills">

                
                    <% for(var i = 0; i<locals.navLinks.length; i++) { %>
                    <li class="nav-item active">
                        <a href="<%= locals.navLinks[i].link %>" 
                            class="nav-link <% if (locals.navLinks[i].link == locals.currentURL) { %> active text-white<% } %>">
                                <%= locals.navLinks[i].name %>
                        </a>
                    </li>
                   <% } %>
                   <% } %>
                </ul>
            </div>
        </div>
    </nav>